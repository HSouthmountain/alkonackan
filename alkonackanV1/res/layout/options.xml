<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF">
    <TextView 
    	android:layout_height="wrap_content" 
    	android:layout_width="wrap_content" 
    	android:id="@+id/textView1" 
    	android:text="Dina inställningar" 
    	android:textColor="#333333" 
    	android:layout_gravity="center_horizontal" 
    	android:layout_marginTop="20sp" 
    	android:textSize="24sp" 
    	android:layout_marginBottom="30sp">
    </TextView>
    <RadioGroup 
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:orientation="horizontal" 
    	android:layout_gravity="center" 
    	android:layout_marginBottom="20sp" android:id="@+id/radioManKvinna">
        <RadioButton 
        	android:id="@+id/radioMan" 
        	android:layout_height="wrap_content" 
        	android:layout_width="wrap_content" 
        	android:checked="true" 
        	android:text="Man" 
        	android:textColor="#333333" 
        	android:layout_marginRight="5sp">
        </RadioButton>
        <RadioButton 
        	android:id="@+id/radioKvinna" 
        	android:layout_height="wrap_content" 
        	android:layout_width="wrap_content" 
        	android:text="Kvinna" 
        	android:textColor="#333333" 
        	android:layout_marginLeft="5sp">
        </RadioButton>
    </RadioGroup> 
    <Spinner 
    	android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:layout_marginLeft="50sp"
		android:layout_marginRight="50sp" 
		android:prompt="@string/vikt_prompt"
		android:drawSelectorOnTop="true" 
		android:fadeScrollbars="true"
		android:layout_marginBottom="150sp" 
		android:contentDescription="Vikt" android:id="@+id/spinnerVikt">
	</Spinner>
    <Button 
    	android:layout_width="wrap_content" 
    	android:text="Kom igång!" 
    	android:layout_height="40sp" 
    	android:layout_gravity="center_horizontal|bottom"
    	android:textSize="18sp" android:id="@+id/buttonOptionsStart">
    </Button>
</LinearLayout>
